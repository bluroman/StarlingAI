package utils{	public class ArrayUtils	{		public static function removeItemArray( theArray:Array, theItem:Object ):void		{			//trace("remove: "+theItem+" from "+theArray );			for( var i:int=0; i<theArray .length; i++ )			{				if( theArray [i]==theItem )				{					theArray .splice( i, 1 );					break;				}			}			//trace("Your array is now: "+theArray );		}				// used by SoundManager.as, finds element in array and returns position		public static function searchArrayPosition( $request:String, arr:Array ):int		{			var exists:int;			for( var i:uint=0; i < arr.length; i++ )			{				if( arr[i].soundRequest == $request )				{					exists = i;				}			}			return exists;		}				// used by SoundManager.as, finds element in array and returns Boolean value		public static function searchArrayBool( $request:String, arr:Array ):Boolean		{			var exists:Boolean = false;			for( var i:uint=0; i < arr.length; i++ )			{				if( arr[i].soundRequest == $request )exists = true;			}			return exists;		}		}}